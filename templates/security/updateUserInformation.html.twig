{% extends 'base.html.twig' %}


{% block body %}
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-10 m-auto">
            <h1 class="mb-3">Mon compte</h1>

            <div class="row justify-content-between">
                <div class="col-lg-8">
                    <h3 class="mb-3">Mes informations personnel</h3>
                    {{form_start(formUser)}}
                    {{ form_row(formUser.email, {
                        'label' : 'Email ', 
                        'small' : 'L\'email sera utilis√© comme moyen de contact et identifiant de connexion',
                        'attr' : {
                            'readonly' : 'readonly',
                            'placeholder' : 'Votre email de connexion'
                        }
                    }) }}
                    {{ form_row(formUser.username, {
                        'label' : 'Nom d\'utilisateur ', 
                        'attr' : {
                            'placeholder' : 'Votre nom visible sur le site'
                        }
                    }) }}
                    {% if user.avatar is not null %}
                        <div class="row" id="divImgAvatar">
                            <div class="col-lg-3">
                                <img src="{{ asset('uploads/img/' ~ user.avatar)}}" alt="" style="width:250px">
                            </div>
                            <div class="col-lg-2">
                                <a href="{{path('remove-avatar')}}" data-token="{{ csrf_token('deleteAvatar') }}" class="btn btn-primary">Supprimer la photo d'avatar</a>
                            </div>
                        </div>
                    {% endif %}
                    {{form_end(formUser)}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('JS/removeAvatar.js') }}"></script>
{% endblock %}