{% extends 'base.html.twig' %}


{% block body %}
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-10 m-auto">
            <h1 class="mb-3">Mon compte</h1>

            <div class="row justify-content-between">
                <div class="col-lg-8">
                    <h3 class="mb-3">Mes informations personnel</h3>
                    {{form_start(formUser)}}
                    {{ form_row(formUser.email, {
                        'label' : 'Email ', 
                        'small' : 'L\'email sera utilis√© comme moyen de contact et identifiant de connexion',
                        'attr' : {
                            'readonly' : 'readonly',
                            'placeholder' : 'Votre email de connexion'
                        }
                    }) }}
                    {{ form_row(formUser.username, {
                        'label' : 'Nom d\'utilisateur ', 
                        'attr' : {
                            'placeholder' : 'Votre nom visible sur le site'
                        }
                    }) }}
                    {{ form_row(formUser.save, {
                        'label' : 'Enregistrer les changements',  
                        'attr' : {
                            'class' : 'btn btn-info'
                        }
                    }) }}
                    {{form_end(formUser)}}
                </div>
            </div>
        </div>
    </div>

{% endblock %}