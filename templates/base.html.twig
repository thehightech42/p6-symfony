        {% block javascripts %}

        {% endblock %}

        {% if toast is defined and toast is not null  %}
            <p id="data" style="display:none;">{{toast}}</p>
            <script>
            let basliseToast = document.getElementById('data');
            let toastConf = JSON.parse(basliseToast.textContent);
                $.toast(toastConf);
            basliseToast.remove();
        </script>
    {% endif %}
    
